#pragma once

#include <string>

namespace aiko
{
    namespace global
    {

        inline constexpr bool GPU_LOGGING = true;

        inline const std::string GLOBAL_PATH = "${GLOBAL_PATH}";
        inline const std::string GLOBAL_ASSET_PATH = "${GLOBAL_ASSET_PATH}";

        inline std::string getAssetPath(const char* subpath)
        {
            std::string buffer;
            buffer.clear();
            buffer += GLOBAL_ASSET_PATH;
            buffer += subpath;
            return buffer;

        }

    }
}
