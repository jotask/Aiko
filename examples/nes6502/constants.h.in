#pragma once

#include <string>

namespace nes
{
    namespace global
    {
        inline constexpr const char* NES_ASSET_PATH = "${NES_ASSET_PATH}";

        inline const char* getAssetPath(const char* subpath)
        {
            static std::string buffer;
            buffer += GLOBAL_ASSET_PATH;
            buffer += subpath;
            return buffer.c_str();

        }

    }
}
